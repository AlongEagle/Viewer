<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_5">
    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
    	android:id="@+id/thumb"
        android:layout_width="@dimen/camera_thumb_width"
    	android:layout_height="@dimen/camera_thumb_height"
        android:scaleType="fitXY"
        app:riv_corner_radius="@dimen/thumb_rouder_conner" />
    <LinearLayout
	    android:layout_width="0dp"
	    android:layout_height="@dimen/camera_thumb_height"
	    android:layout_weight="1.0"
	    android:orientation="vertical"
    	android:gravity="center_vertical"
    	android:padding="@dimen/dp_5">
	    <TextView android:id="@+id/cameraName"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:textColor="@color/black"
	    	android:textSize="@dimen/camera_name_size"/>
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical">
		    <ImageView android:id="@+id/cameraState"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"/>
		    <TextView android:id="@+id/cameraStateTxt"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
	    		android:textColor="@color/gray"
	    		android:textSize="@dimen/camera_state_size"/>
		</LinearLayout>"
    </LinearLayout>
    
    <ImageView android:id="@+id/edit"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/edit_camera"
    	android:visibility="gone"/>
    <TextView 
        android:layout_width="@dimen/dp_1"
    	android:layout_height="match_parent"
    	android:layout_margin="@dimen/dp_5"
	    android:background="@color/gray"
    	android:visibility="gone"/>
    <ImageView android:id="@+id/delete"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/delete_camera"/>"
</LinearLayout>
